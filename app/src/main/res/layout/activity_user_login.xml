<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dip"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/icon_login_logo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/userLogin_container"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.9" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
             android:layout_marginBottom="@dimen/space_35">

            <TextView
                android:id="@+id/login_hint_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/login_hint_title"
                android:textColor="@color/white"
                android:textSize="@dimen/text_max_size" />

            <LinearLayout
                android:id="@+id/ll_login_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_hint_message"
                android:layout_marginTop="@dimen/space_25"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/layout_qq_login"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/space_6"
                        android:drawableTop="@drawable/icon_login_qq"
                        android:gravity="center_horizontal"
                        android:text="@string/login_qq_text"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_weibo_login"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/space_6"
                        android:drawableTop="@drawable/icon_login_weibo"
                        android:gravity="center_horizontal"
                        android:text="@string/login_weibo_text"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_weixin_login"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/space_6"
                        android:drawableTop="@drawable/icon_login_weixin"
                        android:gravity="center_horizontal"
                        android:text="@string/login_weixin_text"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_look_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/ll_login_view"
                android:background="@drawable/selector_look_background"
                android:text="随便看看"
                android:layout_marginTop="@dimen/space_25"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>