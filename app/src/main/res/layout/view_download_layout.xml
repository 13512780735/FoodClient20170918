<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/notify_app_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:gravity="center"
        android:src="@drawable/app_icon" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/notify_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:text="食More更新中"
            android:textColor="@color/black" />

        <ProgressBar
            android:id="@+id/notify_app_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_below="@id/notify_app_title"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="5.0dip"
            android:max="100" />

        <TextView
            android:id="@+id/notify_app_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="5.0dip"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/notify_progress_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notify_app_progress"
            android:layout_marginTop="5.0dip"
            android:text="进度：0%"
            android:textColor="#FFF1F1F1" />
    </RelativeLayout>

</LinearLayout>